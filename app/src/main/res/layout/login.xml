<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log In"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toTopOf="@+id/et_login"
            android:layout_marginStart="4dp"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="79dp"
            app:layout_constraintLeft_toLeftOf="@+id/et_login"
            android:layout_marginLeft="4dp" />

        <EditText
            android:id="@+id/et_login"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:ems="10"
            android:inputType="textPersonName"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="265dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login: "
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            app:layout_constraintRight_toLeftOf="@+id/et_login"
            tools:layout_constraintRight_creator="1"
            android:layout_marginEnd="21dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/et_login"
            tools:layout_constraintBaseline_creator="1"
            android:layout_marginRight="21dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="Password: "
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:layout_marginStart="44dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="44dp"
            tools:layout_constraintTop_creator="1"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/et_login" />

        <Button
            android:id="@+id/btn_enterLogIn"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_marginBottom="25dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:onClick="enter"
            android:text="ENTER!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_error"
            app:layout_constraintVertical_bias="0.25"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1" />

        <TextView
            android:id="@+id/tv_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="176dp"
            android:layout_marginEnd="91dp"
            android:text="not correct"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintRight_creator="1" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="@+id/et_login"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView5"
            tools:layout_constraintBaseline_creator="1"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/et_login" />

    </android.support.constraint.ConstraintLayout>
</LinearLayout>