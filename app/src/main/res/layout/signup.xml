<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">

        <EditText
            android:id="@+id/ed_repeadPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toTopOf="@+id/textView13"
            app:layout_constraintRight_toRightOf="@+id/et_passwordSignUp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/et_passwordSignUp"
            app:layout_constraintTop_toTopOf="@+id/textView13" />

        <TextView
            android:id="@+id/tv_errorSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="not correct"
            android:visibility="invisible"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toTopOf="@+id/btn_register"
            app:layout_constraintRight_toRightOf="@+id/ed_repeadPassword"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="11dp"
            app:layout_constraintLeft_toLeftOf="@+id/ed_repeadPassword" />

        <EditText
            android:id="@+id/et_emailSignIn"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:ems="10"
            android:inputType="textPersonName"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toTopOf="@+id/et_passwordSignUp"
            app:layout_constraintRight_toRightOf="@+id/et_passwordSignUp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/et_passwordSignUp" />

        <EditText
            android:id="@+id/et_passwordSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toTopOf="@+id/ed_repeadPassword"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="154dp"
            android:layout_height="21dp"
            android:text="repeat password:"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            tools:layout_constraintBottom_creator="1"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="141dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="11dp"
            android:text="Email: "
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="@+id/textView8"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginBottom="42dp"
            android:layout_marginEnd="26dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="43dp"
            android:onClick="enter"
            android:text="register"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ed_repeadPassword"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1" />

        <EditText
            android:id="@+id/et_loginSignUp"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:ems="10"
            android:inputType="textPersonName"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toTopOf="@+id/et_emailSignIn"
            app:layout_constraintRight_toRightOf="@+id/et_emailSignIn"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="3dp"
            app:layout_constraintLeft_toLeftOf="@+id/et_emailSignIn" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            tools:layout_constraintTop_creator="1"
            android:layout_marginStart="118dp"
            android:layout_marginTop="87dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login: "
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="@+id/textView11"
            app:layout_constraintBaseline_toBaselineOf="@+id/et_loginSignUp"
            tools:layout_constraintBaseline_creator="1"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/textView11" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="90dp"
            android:layout_height="19dp"
            android:text="Password: "
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="@+id/textView13"
            app:layout_constraintBaseline_toBaselineOf="@+id/et_passwordSignUp"
            tools:layout_constraintBaseline_creator="1"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/textView13" />
    </android.support.constraint.ConstraintLayout>

</LinearLayout>